---
import Layout from '../layouts/Layout.astro'
import 'photoswipe/style.css'
---

<Layout title='Galeria'>
  <div
    slot='content'
    class='grid lg:grid-cols-4 grid-cols-2 gap-4 mx-8 lg:mt-24 sm:mt-16 md:mt-32 mt-32 mb-4 max-w-screen h-auto dark:bg-[#18191d] relative'
    id="galeria"
  >
  {
    Array.from({length:12}).map((_,i) =>(
      <a 
        href={`./src/images/galeria/img-${i+1}.jpg`}
        data-pswp-width="1280"
        data-pswp-height="720"
        target="_blank"
      >
        <img src={`./src/images/galeria/img-${i+1}.jpg`} class="rounded-md"/>
      </a>
    ))
  }
  </div>
</Layout>
<script>
  import PhotoSwipeLightbox from 'photoswipe/lightbox'
  const lightbox = new PhotoSwipeLightbox({
    gallery: '#galeria',
    children: 'a',
    showHideAnimationType: 'fade',
    pswpModule: () => import('photoswipe')
  });
  lightbox.init();
  </script>
