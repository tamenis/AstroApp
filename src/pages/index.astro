---
import Layout from '../layouts/Layout.astro'
import BentoItem from '../components/BentoItem.astro';
---

<Layout title='index'>
  <article
    slot='content'
    class='mx-16 mt-32 sm:mt-16 my-8 max-w-auto bg-[#e0dddd] dark:bg-[#151515]'
    class='mx-16 mt-32 sm:mt-16 my-8 max-w-auto bg-[#e0dddd] dark:bg-[#151515]'
  >
    <div class='grid grid-cols-7 mb-4 gap-4 h-32 lg:h-40'>
      <BentoItem enlace="/Contenido1" estilo="col-span-3 flex items-center justify-center h-full rounded bg-[#a6311d] duration-700 group relative hover:scale-90" titulo="Contenido1" contenido="Hola mundo"></BentoItem>
      <BentoItem enlace="/Contenido2" estilo="col-span-4 flex items-center justify-center h-full rounded bg-[#1e1e1e] text-white dark:text-black dark:bg-[#e0dddd] duration-700 group relative hover:scale-90" titulo="Contenido2" contenido="Hola mundo"></BentoItem>
      </div>
      <BentoItem enlace="/Galeria" estilo="flex items-center h-32 lg:h-48 justify-center mb-4 rounded bg-[#003e74] duration-700 group relative hover:scale-90" titulo="Galeria" contenido="Hola mundo"></BentoItem>
    <div class='grid grid-cols-2 gap-4 grid-rows-2'>
      <BentoItem enlace="/Informacion" estilo="h-28 lg:h-32 flex items-center justify-center rounded bg-[#151515] dark:bg-[#e0dddd] text-white dark:text-black duration-700 group relative hover:scale-90" titulo="Informacion" contenido="Hola mundo"></BentoItem>
      <BentoItem enlace="/Contacto" estilo="row-span-2 flex items-center justify-center rounded bg-[#a6311d] duration-700 group relative hover:scale-90" titulo="Contacto" contenido="Hola mundo"></BentoItem>
      <BentoItem enlace="/QuienesSomos" estilo="h-28 lg:h-32 flex items-center justify-center rounded bg-[#ecbd4f] duration-700 group relative hover:scale-90" titulo="Quienes somos" contenido="Hola mundo"></BentoItem>
      <!-- <BentoItem enlace="/" estilo="h-28 flex items-center justify-center rounded bg-[#151515] dark:bg-[#e0dddd] text-white dark:text-black duration-700 group relative hover:scale-90" titulo="???" contenido="Hola mundo"></BentoItem>
      -->
    </div>
  </article>
</Layout>

<style is:global>
  article {
    margin: auto;
    @apply dark:bg-[#151515];
    background-color: #e0dddd;
    @apply rounded-lg;
    margin-top: 32px;
    margin-right: 32px;
    @apply max-h-screen;
    @apply flex-grow;
  }
</style>
