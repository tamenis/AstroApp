---
import Layout from '../layouts/Layout.astro'
---

<Layout title='Contacto'>
  <div slot='content' class='mx-16 mt-32 sm:mt-16 max-w-screen dark:bg-[#151515]'>
    <form class="w-full max-w-auto bg-[#e0dddd] h-full p-10 flex flex-col gap-8">
      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
          <label class="block uppercase tracking-wide text-xs font-monospace mb-2" for="Nombre">
            Nombre
          </label>
          <input class="appearance-none block w-full bg-[#e0dddd] border-black border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-[#a6311d]" id="nombre" type="text">
        </div>
        <div class="w-full md:w-1/2 px-3">
          <label class="block uppercase tracking-wide text-xs font-monospace mb-2"for="Apellidos">
            Apellidos
          </label>
          <input class="appearance-none block w-full bg-[#e0dddd] border-black border rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-[#a6311d]" id="apellidos" type="text">
        </div>
      </div>
      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
          <label class="block uppercase tracking-wide text-xs font-monospace mb-2" for="Correo">
            Correo
          </label>
          <input class="appearance-none block w-full bg-[#e0dddd] border-black border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-[#a6311d]" id="correo" type="email">
        </div>
      </div>
      <div class="flex flex-wrap -mx-3 mb-2">
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
          <label class="block uppercase tracking-wide text-xs font-monospace mb-2" for="Numero de telefono">
            Numero de telefono
          </label>
          <input class="appearance-none block w-full bg-[#e0dddd] border border-black rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-[#a6311d]" id="disponibilidad" type="text" placeholder="9:00">
        </div>
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
          <label class="block uppercase tracking-wide text-xs font-monospace mb-2" for="Disponibilidad dia">
            Disponibilidad : Dia
          </label>
          <div class="relative">
            <select class="block appearance-none w-full bg-[#e0dddd] border border-black py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-[#a6311d]" id="grid-state">
              <option>Lunes</option>
              <option>Martes</option>
              <option>Miercoles</option>
              <option>Jueves</option>
              <option>Viernes</option>
            </select>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2">
              <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
            </div>
          </div>
        </div>
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
          <label class="block uppercase tracking-wide text-xs font-monospace mb-2" for="Disponibilidad hora">
            Disponibilidad : Hora
          </label>
          <div class="relative">
            <select class="block appearance-none w-full bg-[#e0dddd] border border-black py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-[#a6311d]" id="grid-state">
              <option>9:00</option>
              <option>10:00</option>
              <option>11:00</option>
              <option>12:00</option>
              <option>13:00</option>
              <option>14:00</option>
            </select>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2">
              <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
            </div>
          </div>
        </div>
        </div>
        <input type="button" class="lg:mt-16 h-24 hover:bg-[#a6311d] bg-black text-white hover:text-black duration-500 font-monospace py-2 px-4 rounded focus:outline-none focus:shadow-outline" value="Enviar formulario"/>
      </div>    
    </form>
  </div>
</Layout>
