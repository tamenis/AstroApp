---
import { string } from 'astro/zod';
interface Props {
    titulo: string;
    estilo: string;
    contenido: string;
    enlace: string;
}
const{titulo,estilo,contenido,enlace} = Astro.props
---


<a
href={enlace}
class={estilo}
>
<p
  class='transition-transform transform group-hover:-translate-y-full relative lg:text-2xl text-sm'
>
  {titulo}
</p>
<p
  class='absolute text-black transition-transform transform translate-y-full group-hover:translate-y-0 opacity-0 group-hover:opacity-100 text-xs lg:text-base whitespace-pre-wrap'
>
  {contenido}
</p>
</a>